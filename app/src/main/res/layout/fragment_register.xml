        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btnRegister"
            style="@style/darkPurpleButtonStyle"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Register"
            app:layout_constraintBottom_toTopOf="@id/reg_guide_hb"
            app:layout_constraintEnd_toStartOf="@+id/reg_guide_vr"
            app:layout_constraintStart_toEndOf="@+id/reg_guide_vl"
            app:spinning_bar_color="@color/white"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/reg_guide_ht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
