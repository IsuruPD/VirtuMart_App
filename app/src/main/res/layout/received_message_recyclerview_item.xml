<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/receivedMessageChatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:background="@drawable/rounded_rectangle_secondary"
        android:fontFamily="@font/poppins_light"
        android:padding="8dp"
        android:text="This is a sample text This is a sample text This is a sample text This is a sample text This is a sample text This is a sample text This is a sample text "
        android:textColor="#FFFFFF"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/receivedTimeStampChatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_light"
        android:textSize="8sp"
        android:gravity="start"
        android:text="12:00 pm"
        android:textStyle="italic" />
</LinearLayout>
